#:import utils kivy.utils

<Andor1>
    button: btn_1
    button: btn_2
    button: btn_3
    button: btn_4
    button: btn_5
    button: btn_6

    Image:
        source: "Main/Pictures/dragon.png"
        allow_stretch: True
        keep_ratio: False

    GridLayout:
        cols: 3
        Button:
            text: "Legende 1 \n Die Ankunft \n der Helden"
            background_normal: "Main/Pictures/Legenden.png"
            id: btn_1
            size_hint: (.5, 1)
            on_release:
                root.manager.current = "login"
                root.manager.transition.direction = "up"
        Button:
            text: "Legende 2 \n Die Heilung \n des Königs"
            background_normal: "Main/Pictures/Legenden.png"
            id: btn_2
            size_hint: (.5, 1)
        Button:
            text: "Legende 3 \n Die Tage \n des Wider-\n stands"
            background_normal: "Main/Pictures/Legenden.png"
            id: btn_3
        Button:
            text: "Legende 4 \n Das Geheimnis \n der Mine"
            background_normal: "Main/Pictures/Legenden.png"
            id: btn_4
        Button:
            text: "Legende 5 -\n Der Zorn \n des Drachen"
            background_normal: "Main/Pictures/Legenden.png"
            id: btn_5
        Button:
            text: "zurück"
            background_normal: "Main/Pictures/Schwarze_Kogge.png"
            id: btn_6
            on_release:
                root.manager.current = "games"
                root.manager.transition.direction = "down"
